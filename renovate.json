{
  "extends": [
    "config:base",
    ":enableVulnerabilityAlerts",
    ":pinOnlyDevDependencies",
    "schedule:weekly"
  ],
  "separateMajorMinor": true,
  "packageRules": [
    {
      "matchPackagePatterns": ["^Microsoft"],
      "groupName": ".NET Core Dependencies",
      "enabled": false
    },
    {
      "packagePatterns": [
        "*"
      ],
      "updateTypes": ["minor", "patch"],
      "groupName": "all dependencies",
      "groupSlug": "all"
    }
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "labels": [
    "Type: Maintenance"
  ],
  "ignoreDeps": []
}
